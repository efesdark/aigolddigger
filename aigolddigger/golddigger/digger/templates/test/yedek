        const chart = LightweightCharts.createChart(document.getElementById('bitcoinChart'), {
            width: 650,
            height: 320,
        });

        const candlestickSeries = chart.addCandlestickSeries();

        // Binance API'den alınan verileri Python tarafından gönderilen değişkenle güncelle
        const formattedData = {{ formatted_data|safe }};

        // Grafiği güncelle
        candlestickSeries.setData(formattedData);
    });
</script>
<script>
    const binanceData = [
    // Buraya Python kodundan alınan veriyi ekleyin
    // Örneğin: { timestamp: '2022-01-01T00:00:00.000Z', open: 100, high: 120, low: 80, close: 110, volume: 1000 },
    // ...
];

// Veriyi uygun formata dönüştür
const formattedData = binanceData.map(item => ({
    t: new Date(item.timestamp),
    o: parseFloat(item.open),
    h: parseFloat(item.high),
    l: parseFloat(item.low),
    c: parseFloat(item.close),
}));

// Mum grafiklerini çizmek için Chart.js kullanımı
const ctx = document.getElementById('candlestickChart').getContext('2d');
const candlestickChart = new Chart(ctx, {
    type: 'candlestick',
    data: {
        datasets: [{
            label: 'Binance Candlestick Chart',
            data: formattedData,
        }],
    },
    options: {
        scales: {
            x: {
                type: 'time',
                time: {
                    unit: 'minute', // Zaman birimi, isteğe bağlı olarak değiştirilebilir
                },
            },
        },
    },
});
document.addEventListener('DOMContentLoaded', function () {
    const chart = LightweightCharts.createChart(document.getElementById('bitcoinChart'), {
