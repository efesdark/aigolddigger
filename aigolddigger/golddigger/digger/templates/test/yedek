    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const chart = LightweightCharts.createChart(document.getElementById('bitcoinChart'), {
                width: 800,
                height: 400,
            });

            const candlestickSeries = chart.addCandlestickSeries();

            // Django görünümünden gelen JSON formatındaki veriyi al
            const formattedDataJson = '{{ formatted_data_json|safe }}';
            const formattedData = JSON.parse(formattedDataJson);

            // Grafiği güncelle
            candlestickSeries.setData(formattedData);
        });
    </script>
